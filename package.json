{
  "private": true,
  "version": "0.2.0",
  "name": "carcer",
  "workspaces": [
    "example",
    "packages/base",
    "packages/client",
    "packages/shell"
  ],
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "postcss-flexbugs-fixes": "^3.3.0",
    "postcss-loader": "^2.1.3",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.20.3",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "scripts": {
    "build": "yarn build-carcer && yarn build-example",
    "build-carcer": "yarn build-client && yarn build-base",
    "gen-json": "cd ./packages/base && yarn gen-json",
    "build-client": "webpack --config client.config.js",
    "build-base": "yarn gen-json && webpack --config base.config.js",
    "build-example": "cd example && yarn build",
    "build-docker": "cd example && yarn build-docker",
    "start": "cd example && yarn start",
    "start-docker": "cd example && yarn start-docker"
  }
}
